<div class="row">
  <%= render 'layouts/sidebar', user: current_user, book: @book %>

  <div class="col-xs-9">

    <% if @user_or_book == "1"%>
      <h2>Users</h2>
      <%= render 'users/users_index', users: @users %>
    <% elsif @user_or_book == "2" %>
      <h2>Books</h2>
      <%= render 'books/books_index', books: @books %>
    <% else %>
    <% end %>

  </div>

</div>