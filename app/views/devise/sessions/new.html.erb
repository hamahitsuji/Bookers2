<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :name, for: "user_name" %><br/ >
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "name", id: "user_name" %>
  </div>

  <div class="field">
    <%= f.label :password, for: "user_password" %><br/ >
    <%= f.password_field :password, autocomplete: "password", class: "password", id: "user_password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, id: "user_remember_me" %>
      <%= f.label :remember_me, for: "user_remember_me" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


