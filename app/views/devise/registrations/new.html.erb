<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, for: "user_name" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "name", id: "user_name" %>
  </div>

  <div class="field">
    <%= f.label :email, for: "user_email" %><br />
    <%= f.email_field :email, autocomplete: "email", class: "email", id: "user_email" %>
  </div>

  <!-- ↓ここから追加 -->
  <div class="field">
    <%= f.label :postcode, "Postal code" %><br />
    <%= f.text_field :postcode, class: "postode", id: "address_zipcode" %>
  </div>

  <div class="field">
    <%= f.label :prefecture_code %><br />
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, class: "address" %>
  </div>

  <div class="field">
    <%= f.label :address_city, "City"  %><br />
    <%= f.text_field :address_city, autocomplete: "address_city", class: "address", id: "address_city" %>
  </div>

  <div class="field">
    <%= f.label :adress_street, "Street" %><br />
    <%= f.text_field :address_street, autocomplete: "address_street", class: "address", id: "address_street" %>
  </div>
  <!-- ↑ここまで -->

  <div class="field">
    <%= f.label :password, for: "user_password" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "password", id: "user_password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, for: "user_password_confirmation" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "password_confirm", id: "user_password_confirmation" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
