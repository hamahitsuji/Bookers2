<div class="row">

  <%= render 'layouts/sidebar', user: @book.user, book: @new_book %>

  <div class="col-xs-9">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr id="show_post_<%= @book.id %>">
          <%= render 'show_post', book: @book %>
        </tr>
      </tbody>
    </table>

    <h3>Book Comments</h3>
    <table class="table">
      <tbody>
        <% @book.book_comments.each do |book_comment| %>
          <tr>
            <td>
              <%= attachment_image_tag book_comment.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "attachment user profile_image", fallback: "no_image.jpg", size: '50x50' %><br>
              <%= link_to book_comment.user.name, user_path(book_comment.user) %>
            </td>
            <td><%= book_comment.comment %></td>
            <td><%= book_comment.created_at.strftime('%Y/%m/%d') %></td>
            <% if book_comment.user == current_user %>
              <td>
                <%= link_to "Destroy", book_book_comments_path(@book), method: :delete, "data_confirm" => "本当に消しますか？", class: "btn-sm btn-danger" %>
              </td>
            <% else %>
              <td></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="comment-form">
      <%= form_for [@book, @book_comment] do |f| %>
        <%= f.text_area :comment, size: "90x5" %>
        <%= f.submit "送信" %>
      <% end %>
    </div>

  </div>

</div>